    "dev": "pnpm tsc --build --watch",
    "force-build": "pnpm tsc --build --force",
    "lint": "pnpm eslint ."
  },
  "license": "MIT",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "private": true,
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.53.0",
    "@typescript-eslint/parser": "^5.53.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.34.0",
    "typescript": "^4.9.5"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}