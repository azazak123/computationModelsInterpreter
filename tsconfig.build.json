{
  "compilerOptions": {
    "composite": true,
    "target": "es2018",
    "module": "commonjs",
    "isolatedModules": true,
    "baseUrl": "./packages",
    "paths": {
      "*": ["packages/*"]
    },
    "declarationMap": true,
    "sourceMap": true,
    "noEmitOnError": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-jsx",
    "strict": true,
    "noImplicitReturns": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "skipLibCheck": true,
    "outDir": "dist"
  },

  "exclude": ["node_modules", "dist"]
}
